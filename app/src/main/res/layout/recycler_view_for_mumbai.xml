<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout2"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/search_bg">


    <ImageView
        android:id="@+id/imgInMumbai"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:padding="@dimen/dp_4"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PriceOfMumbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_20"
        android:fontFamily="@font/sniglet"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        app:layout_constraintStart_toEndOf="@id/imgInMumbai"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TitleOfMumbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_20"
        android:fontFamily="@font/sniglet"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toEndOf="@id/imgInMumbai"
        app:layout_constraintTop_toBottomOf="@id/PriceOfMumbai" />

    <TextView
        android:id="@+id/ExtrasOfMumbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_margin="@dimen/dp_6"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toEndOf="@id/imgInMumbai"
        app:layout_constraintTop_toBottomOf="@id/TitleOfMumbai" />

    <ImageView
        android:id="@+id/LocationIcon"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_margin="@dimen/dp_6"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toEndOf="@id/imgInMumbai"
        app:layout_constraintTop_toBottomOf="@id/ExtrasOfMumbai" />

    <TextView
        android:id="@+id/tvTownOfMumbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        app:layout_constraintStart_toEndOf="@id/LocationIcon"
        app:layout_constraintTop_toBottomOf="@id/ExtrasOfMumbai" />

    <TextView
        android:id="@+id/CityOfMumbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        app:layout_constraintStart_toEndOf="@id/tvTownOfMumbai"
        app:layout_constraintTop_toBottomOf="@id/ExtrasOfMumbai" />


    <ImageView
        android:id="@+id/imgMumbaiHeart"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ic_heart_unselected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>