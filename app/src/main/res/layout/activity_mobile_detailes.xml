<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MobileDetailesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMobiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:paddingStart="@dimen/dp_60"
            android:text="@string/mobiles"
            android:textColor="@color/darkGreen"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />
        <View
            android:id="@+id/view_FullUnderLine1_mobile"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray"
            android:layout_below="@id/tvMobiles"/>

        <ImageView
            android:id="@+id/IvBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/backarrow" />
    </RelativeLayout>


    <TextView
        android:id="@+id/TvMobilePhones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mobile_phones"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/darkGreen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:id="@+id/view_FullUnderLine2_mobile"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/tvMobiles"/>

    <TextView
        android:id="@+id/TvAccessories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Accessories"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/darkGreen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:id="@+id/view_FullUnderLine3_mobile"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/tvMobiles"/>
    <TextView
        android:id="@+id/TvTablets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tablets"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/darkGreen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:id="@+id/view_FullUnderLine4_mobile"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/tvMobiles"/>


</LinearLayout>