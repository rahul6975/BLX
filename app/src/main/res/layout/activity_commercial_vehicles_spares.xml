<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CommercialVehiclesSparesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCommercialVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:paddingStart="@dimen/dp_60"
            android:text="@string/commercial_vehicles"
            android:textColor="@color/darkGreen"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />
        <View
            android:id="@+id/view_FullUnderLine1_commercial"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray"
            android:layout_below="@id/tvCommercialVehicle"/>

        <ImageView
            android:id="@+id/IvBackArrow_commercial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/backarrow" />
    </RelativeLayout>


    <TextView
        android:id="@+id/TvCommercialOther_commercial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commercial_other"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/darkGreen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:id="@+id/view_FullUnderLine2_commercial"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/TvCommercialOther_commercial"/>

    <TextView
        android:id="@+id/TvSpareParts_commercial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spare_parts"
        android:textSize="@dimen/sp_18"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/darkGreen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:id="@+id/view_FullUnderLine3_commercial"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/TvSpareParts_commercial"/>

</LinearLayout>