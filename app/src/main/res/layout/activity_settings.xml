<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Settings">

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_15">


            <ImageView
                android:id="@+id/ivSettingsBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_20"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvSettingsHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="@string/settings"
                android:textColor="@color/marine_blue"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TvPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="@dimen/dp_15"
        android:text="@string/privacy"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/settingsCardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/settingsCardView"
        app:layout_constraintTop_toBottomOf="@+id/settingsCardView" />

    <TextView
        android:id="@+id/tvPrivacyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="@string/create_password"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TvPrivacy"
        app:layout_constraintTop_toBottomOf="@+id/TvPrivacy" />

    <View
        android:id="@+id/view_FullUnderLine_P"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/TvPrivacy"
        app:layout_constraintStart_toStartOf="@+id/TvPrivacy"
        app:layout_constraintTop_toBottomOf="@+id/tvPrivacyDetails" />

    <TextView
        android:id="@+id/tvNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_15"
        android:text="@string/notifications"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_FullUnderLine_P"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_FullUnderLine_P"
        app:layout_constraintTop_toBottomOf="@+id/view_FullUnderLine_P" />

    <TextView
        android:id="@+id/tvNotificationsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="Recommendations and Special communications"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvNotifications"
        app:layout_constraintTop_toBottomOf="@+id/tvNotifications" />

    <View
        android:id="@+id/view_FullUnderLine_n"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/tvNotifications"
        app:layout_constraintStart_toStartOf="@+id/tvNotifications"
        app:layout_constraintTop_toBottomOf="@+id/tvNotificationsDetails" />

    <TextView
        android:id="@+id/TvLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_15"
        android:text="@string/logout"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_FullUnderLine_n"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_FullUnderLine_n"
        app:layout_constraintTop_toBottomOf="@+id/view_FullUnderLine_n" />

    <View
        android:id="@+id/view_FullUnderLine_lg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/TvLogout"
        app:layout_constraintStart_toStartOf="@+id/TvLogout"
        app:layout_constraintTop_toBottomOf="@+id/TvLogout" />


    <TextView
        android:id="@+id/TvLogoutFromAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_15"
        android:text="@string/logout_from_all_devices"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_FullUnderLine_lg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_FullUnderLine_lg"
        app:layout_constraintTop_toBottomOf="@+id/view_FullUnderLine_lg" />

    <View
        android:id="@+id/view_FullUnderLine_Alg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/TvLogoutFromAll"
        app:layout_constraintStart_toStartOf="@+id/TvLogoutFromAll"
        app:layout_constraintTop_toBottomOf="@+id/TvLogoutFromAll" />


    <TextView
        android:id="@+id/TvDeactivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:drawablePadding="@dimen/dp_15"
        android:text="@string/deactivate_account_and_delete_my_data"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_FullUnderLine_Alg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_FullUnderLine_Alg"
        app:layout_constraintTop_toBottomOf="@+id/view_FullUnderLine_Alg" />

    <View
        android:id="@+id/view_FullUnderLine_Dv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/TvDeactivate"
        app:layout_constraintStart_toStartOf="@+id/TvDeactivate"
        app:layout_constraintTop_toBottomOf="@+id/TvDeactivate" />

</androidx.constraintlayout.widget.ConstraintLayout>