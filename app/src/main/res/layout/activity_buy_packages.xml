<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Buy_packages">

    <androidx.cardview.widget.CardView
        android:id="@+id/buyPackagesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_15">


            <ImageView
                android:id="@+id/ivBuyBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_20"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvBuyPackageHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="@string/buy_packages"
                android:textColor="@color/marine_blue"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvBuyPackagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center"
        android:text="SELECT OPTIONS TO SHOW PACKAGES"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/buyPackagesCardView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/buyPackagesCardView"
        app:layout_constraintTop_toBottomOf="@+id/buyPackagesCardView" />

    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="Categories"
        android:textColor="@color/marine_blue"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvBuyPackagesTitle"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="@+id/tvBuyPackagesTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBuyPackagesTitle" />

    <TextView
        android:id="@+id/tvCategoryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="@string/delivery_and_collection"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/tvCategories"
        app:layout_constraintStart_toStartOf="@+id/tvCategories"
        app:layout_constraintTop_toBottomOf="@+id/tvCategories" />

    <View
        android:id="@+id/view_FullUnderLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/tvCategoryDetails"
        app:layout_constraintStart_toStartOf="@+id/tvCategoryDetails"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryDetails" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="@string/location"
        android:textColor="@color/marine_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_FullUnderLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_FullUnderLine"
        app:layout_constraintTop_toBottomOf="@+id/view_FullUnderLine" />

    <TextView
        android:id="@+id/tvLocationDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:hint="@string/hyderabad_mumbai_pune"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/tvLocation"
        app:layout_constraintStart_toStartOf="@+id/tvLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

    <View
        android:id="@+id/view_FullUnderLine1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/tvLocationDetails"
        app:layout_constraintStart_toStartOf="@+id/tvLocationDetails"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationDetails" />

    <Button
        android:id="@+id/buttonBuyPackages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/marine_blue"
        android:padding="@dimen/dp_15"
        android:text="@string/show_packages"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>